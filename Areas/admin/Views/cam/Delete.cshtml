@model SDES___Webcams.Models.cam

@{
    ViewBag.Title = "Delete Camera";
    Layout = "~/Areas/admin/Views/Shared/_Admin.cshtml";
}

@section links{
    <ul class="content-main-links">
        <li>@Html.ActionLink("Back to List", "Index")</li>
    </ul>
}

<h3>Are you sure you want to delete this?</h3>

<div class="message">
    <div class="display-field">Camera: @Model.camName</div>
</div>
<p>
    <img src="@Url.Action("Frame", "webcam", new { @id = Model.camId, area = "" })" alt="webcam" />
</p>

@using (Html.BeginForm(null, null, FormMethod.Post, new { @class = "fieldset" }))
{
    <div class="submitbox">
        <input type="submit" value="Delete Camera" />
    </div>
}